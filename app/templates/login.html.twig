{% extends 'banner.html.twig' %}
{% block content %}
    <div id="login-div">
        <form method = "{{ method }}" action="{{ action }}">
            <fieldset>
                <legend> Login </legend>
                <br>
                <label for="email"> Email </label>
                <input id="email" name="email" type="text" value="{{ initial_input_box_value }}" size="20" maxlength="50">
                <br><br>
                <label for="password"> Password: </label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="20" maxlength="50">
                <br><br>
                <input type="submit" value="Login">
            </fieldset>
        </form>
        <p> <a href="{{ register_page }}"> Register </a> </p>
    </div>

{% endblock %}