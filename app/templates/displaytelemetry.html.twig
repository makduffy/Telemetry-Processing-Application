{% extends 'homepageform.html.twig' %}
{% block content %}
    <div class="background">
        <h2>{{ page_heading_2 }}</h2>
        <p>{{ page_text }}</p>
        {% for switch in switches %}
            <p>Switch {{ loop.index }}: {{ switch }}</p>
        {% endfor %}
        <p> Fan: <b>{{ fan }}</b></p>
        <p>Heater: <b>{{ heater }} degrees celsius</b></p>
        <p>keypad: <b>{{ keypad }}</b></p>
        <p>ID<b>{{ id }}</b></p>
        <p class="curr_page"><a href="{{ landing_page }}">Another go</a></p>
    </div>
{% endblock %}