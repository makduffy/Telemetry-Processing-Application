{% extends 'banner.html.twig' %}
{% block content %}

    <style>
        .cent {
            text-align: center;
            margin: auto;
        }


        fieldset {
            background-color: #f8f8f8;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            margin-bottom: 20px;
        }

    </style>

    <div id="page-content-div">
        <h1 class="cent">{{ 'Register for telemtry services' }}</h1>
        <fieldset class="cent">
            <form action="{{ action }}" method="get">

                <legend>Create an account</legend>
                <br>
                <label for="username">Enter username: </label>
                <input id="username" name="username" type="text" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <label for="password">Enter your password: </label>
                <input id="password" name="password" type="password" value="{{ initial_input_box_value }}" size="30" maxlength="50">
                <br><br>
                <input type="submit" value="Create account">
            </form>
            <br>
            <a href="/telemetry/">
                <button> Back To Log In</button>
            </a>
        </fieldset>
    </div>
{% endblock %}